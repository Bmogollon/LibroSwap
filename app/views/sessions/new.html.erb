<style>
  body{
 background-image:url('https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcQiaayl6XuInornOq4LDrWJXUiMzkOlC1nnDcocebbMpAR8wqFt1Q');
    margin: 0;
    font: 11px/20px 'Courgette';

  }

h1{
  text-align:center;
  color:black;
  font-size:40px;
  padding:1%;
  text-align:center;
}

  .left {
    position: absolute;
    left: 32%;
    right: 50%;
    top: 50px;
    bottom: 10px;
    width: 500px;
    height:600px;
    background: rgb(247, 246, 212);
    border-radius: 20px;
    box-shadow:
      inset 2px 2px 2px rgba(255,255,255,.2),
      2px 2px 3px rgba(0,0,0,.2);

  }

  .page-inner {
    position: absolute;
    top: 30px;
     bottom: 20px;
    left: 47px;
    right: 15px;
    outline: none;

    background: linear-gradient(
      to bottom,
      transparent,
      transparent 19px,
      rgba(0,0,0,.2),
      rgba(0,0,0,.2) 1px
    );
    background-size: 100% 20px;
    box-shadow:
      0 -1px 0 rgba(0,0,0,0.2),
      0 -5px 0 rgb(247, 246, 212),
      0 -6px 0 rgba(0,0,0,0.4);

    font: 11px/20px 'Courgette';
    color: #555;
    text-align: left;
  }
  .left::before {
  content: '';
  position: absolute;
  left: 45px;
  height: 100%;
  width: 2px;
  background: rgba(255,0,0,0.4);
}

</style>
<h1>LibroSwap</h1>

  <div class="left">
    <div class="page-inner" >
      <div id="login" class="login-form">

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %><br>
      <%= f.email_field :email, class: 'form-control' %><br>

      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'form-control' %><br>

      <%= f.submit "Log in", class: "btn btn-primary" %><br>
    <% end %>

  <p>New User? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
</div>
