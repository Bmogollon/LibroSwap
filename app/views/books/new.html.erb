<h1>Create Your Book</h1>
<%= form_for @book do |f| %>

<label>Author Name:</label><br>
<%= f.text_field :author %><br>

<label>title:</label><br>
 <%= f.text_field :title %><br>

 <label>Description:</label><br>
<%= f.text_area :description, :cols => 30, :rows => 10 %>

<p><%= f.label :category_id, "Select Category"%> <br>
  <%= f.select(:category_id, Category.all.collect{ |category| ["#{category.id}. #{category.name}"]
                                        }, {})%>
 <p><%= f.file_field :avatar, direct_upload: true %></p>
<p>
<%= f.submit %>
</p>


<%end%>
